<h1>User List</h1>
<hr>
<% @users.each do |user| %>
  <div>
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, alt: user.name, size: '200' %>
    <% else %>
      <%= image_tag 'no-user.png', alt: user.name, size: '200' %>
    <% end %>
    <p><%= user.name %></p>
    <p><%= user.email %></p>
    <p><%= user.role.name %></p>
    <%= link_to 'edit', edit_user_path(user) %>
    <%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are your sure?"} %>
  </div>
<% end %>