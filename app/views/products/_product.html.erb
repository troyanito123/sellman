<div>
  <h2><%= product.title %></h2>
  <% if product.images.attached? %>
    <% product.images.each do |image| %>
      <%= image_tag image, size: '300' %>
    <% end %>
  <% else %>
    <%= image_tag 'no-image.png', size: '300' %>
  <% end %>

  <p><%= product.description %></p>
  <h3>Cost: <%= product.cost %></h3>
  <h4>Sell by: <%= product.user.name %></h4>
  <%= link_to 'Edit', edit_product_url(product) if policy(product).edit? %>
  <%= link_to 'Delete', product_path(product), method: :delete,
              data: {confirm: 'Are you sure?'} if policy(product).destroy? %>
  <%= link_to "I am interested", '#' %>
</div>