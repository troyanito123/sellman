<div>
  <h2><%= product.title %></h2>
  <p><%= product.description %></p>
  <h3>Cost: <%= product.cost %></h3>
  <h4>Sell by: <%= product.user.name %></h4>
  <%= link_to 'Edit', edit_product_url(product) %>
  <%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: 'Are you sure?'} %>
</div>